<link rel="stylesheet" href="http://localhost:3000/bootstrap.css" />


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12">
      <!-- <button type="button" id="startMatch" class="btn pull-right disabled">Start Match</button> -->
      <button type="button" style="margin : 10px;" class="btn btn-info btn-sm pull-right str_match" data-toggle="modal" data-target="#myModal1">Start Match</button>

      <div class="modal fade" id="myModal1" role="dialog">

        <div class="modal-dialog modal-sm">

          <div class="modal-content">

            <div class="modal-header">

              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Check</h4>

            </div>
            <div class="modal-body" id="startBody">
              <p></p>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn-sm btn-default" data-dismiss="modal">Close</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row"></div>
  <div class="panel panel-success col-sm-4 col-md-4">
    <h4> {{tourName}} </h4>
    <p class="hidden tourId">{{tourId}}</p>

    <button type="button" id="addPlay" class="btn addPlay">Add Players</button>
    <input type="text" placeholder="Enter Player Name" name="pname">

    <table class="table table-striped" id="getCurrentPlayers">
      <thead class="text-center">
        <tr>
          <th>Player Name</th>
        </tr>
      </thead>
      <tbody>

      </tbody>
    </table>

    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">Existing Players</button>

    <div class="modal fade" id="myModal" role="dialog">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Existing Players</h4>
          </div>
          <div class="modal-body">
            <table class="table" id="playerId">
              <thead class="text-center">
                <tr>
                  <th>Player Name</th>
                </tr>
              </thead>
              <tbody>

              </tbody>
            </table>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="panel panel-success col-sm-8 col-md-8 style="margin: 5px;">
    <h4 class="text-center">Points Table </h4>
    <div>
      <table class="table table-bordered table-striped currentStatus" id="currentStatus">
        <thead class="text-center">
          <tr class="text-center">
            <th>Player Name</th>
            <th>Tour Id</th>
            <th>Win</th>
            <th>Loss</th>
          </tr>
        </thead>
        <tbody>

        </tbody>
      </table>
    </div>
  </div>


  <table class="table col-md-12 col-sm-12" id="rounds">
    <thead class="text-center">
      <tr>
        <th>Round#</th>
        <th>Status</th>
        <th>Execute Round</th>
        <th>Standing</th>
      </tr>
    </thead>
    <tbody>

    </tbody>
  </table>


  <div class="col-sm-12 col-md-12">

    <div class="modal fade" id="myModal2" role="dialog">

      <div class="modal-dialog modal-sm">

        <div class="modal-content">

          <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="Fixture">Fixture</h4>

          </div>
          <div class="modal-body" id="FixtureBody">
            <table class="table" id="fixtureB">
              <thead class="text-center">
                <tr>
                  <th>First Player</th>
                  <th></th>
                  <th>Second Player</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>

              </tbody>
            </table>
          </div>
          <div class="modal-footer">
          <button type="button" class="btn" id="radioHandle" value="">Submit</button>
            <button type="button" class="btn-sm btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>

<div class="col-sm-12 col-md-12">

    <div class="modal fade" id="myModal3" role="dialog">

      <div class="modal-dialog modal-sm">

        <div class="modal-content">

          <div class="modal-header">

            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="Fixture">Current Fixture</h4>

          </div>
          <div class="modal-body" id="currentFixtureBody">
            <table class="table" id="currentFixture">
              <thead class="text-center">
                <tr>
                  <th>Winner</th>
                  <th>Loser</th>
                </tr>
              </thead>
              <tbody>

              </tbody>
            </table>
          </div>
          <div class="modal-footer">
             <button type="button" class="btn" id="currentFixture" value="">Submit</button>
            <button type="button" class="btn-sm btn-default" id="currentFixtureClose" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>


</div>
