<!DOCTYPE html>
<html lang="en">
<head>
  <title>Result Page</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>



  <div class="jumbotron text-center">
    <h1>Tournament Details</h1>
    <P>Current Points</P>
  </div>

  <div class="container">
    <table class="table">
      <thead>
        <tr>
          <th>Players</th>
          <th>Tournament Id</th>
          <th>User Id</th>
          <th>Points</th>
        </tr>
      </thead>
      <tbody>
        <%for(var i=0;i<matchresult.length;i++){%>
        <tr>
          <td><%= matchresult[i].player_name %></td>
          <td><%= matchresult[i].tour_id %></td>
          <td><%= matchresult[i].user_id %></td>
          <td><%= matchresult[i].POINTS %></td>
        </tr>
        <%}%>
      </tbody>
    </table>
  </div>

  <div>
  <div class="col-md-12">
      <div class="row vertical-center-row">
        <form method='post' id="finalResult" action='/api/getFinalResult'>
          <div class="form-group">
            <input class='hidden' type="text" hidden value=<%= matchresult[1].tour_id %> name='tourId'>
          </div>
          <button type="submit" class="btn btn-default">Execute Match</button>
        </form>
      </div>
    </div>
  </div>


</body>
</html>
